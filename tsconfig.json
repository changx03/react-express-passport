{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es6",
            "es2015.promise"
        ],
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "mapRoot": "./src"
    },
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}
